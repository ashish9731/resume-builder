{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "PUPPETEER_CACHE_DIR": "/tmp/puppeteer-cache",
    "CHROME_EXECUTABLE_PATH": "/tmp/chromium/chromium"
  },
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "false"
    }
  }
}